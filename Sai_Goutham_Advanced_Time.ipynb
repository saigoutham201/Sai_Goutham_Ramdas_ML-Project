import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
from prophet import Prophet
from sklearn.metrics import mean_absolute_error
import warnings
warnings.filterwarnings("ignore")
import statsmodels.api as sm

def generate_synthetic_dataset():
    """
    Generates 3+ years of daily data with:
    - Trend
    - Weekly and yearly seasonality
    - Two complex nonlinear exogenous variables
    - Noise
    
    Returns:
        pandas.DataFrame: with columns ["ds", "y", "exo1", "exo2"]
    """

    dates = pd.date_range(start="2017-01-01", end="2020-12-31", freq="D")
    n = len(dates)

    # Trend
    trend = np.linspace(50, 200, n)

    # Yearly seasonality
    yearly = 20 * np.sin(2 * np.pi * np.arange(n) / 365.25)

    # Weekly seasonality
    weekly = 10 * np.sin(2 * np.pi * np.arange(n) / 7)

    # Noise
    noise = np.random.normal(0, 5, n)

    # Complex non-linear exogenous variables
    exo1 = 100 + 30 * np.sin(np.arange(n) / 10) + np.random.normal(0, 3, n)
    exo2 = 0.01 * (np.arange(n) ** 1.3) + 25 * np.random.normal(0, 0.2, n)

    # Target variable
    y = trend + yearly + weekly + 0.2 * exo1 + 0.05 * exo2 + noise

    df = pd.DataFrame({
        "ds": dates,
        "y": y,
        "exo1": exo1,
        "exo2": exo2
    })

    return df


df = generate_synthetic_dataset()

#Prophet Model with Engineered Regressors

def create_prophet_model(df):
    """
    Builds and fits a Prophet model including:
    - Fourier terms for yearly & weekly seasonality
    - Two nonlinear exogenous regressors
    
    Returns:
        fitted Prophet model
    """
    model = Prophet(
        yearly_seasonality=False,
        weekly_seasonality=False,
        interval_width=0.95
    )

    # Add Fourier components
    model.add_seasonality(name="yearly", period=365.25, fourier_order=10)
    model.add_seasonality(name="weekly", period=7, fourier_order=4)

    # Add exogenous regressors
    model.add_regressor("exo1")
    model.add_regressor("exo2")

    model.fit(df)

    return model


prophet_model = create_prophet_model(df)


#SARIMAX Benchmark with Exogenous Variables

def fit_sarimax(df):
    """
    Fits a SARIMAX model with exogenous regressors.
    Returns:
        fitted SARIMAX model
    """
    model = sm.tsa.statespace.SARIMAX(
        df["y"],
        order=(2, 1, 2),
        seasonal_order=(1, 1, 1, 7),
        exog=df[["exo1", "exo2"]]
    ).fit()

    return model


sarimax_model = fit_sarimax(df)


#Rolling Origin Cross-Validation

def rolling_backtest(df, model_prophet, model_sarimax, horizon=30, step=30):
    """
    Performs rolling-origin forecast evaluation for Prophet & SARIMAX.
    
    Returns:
        metrics_df: Accuracy metrics for each model
    """
    cutoffs = pd.date_range("2019-01-01", "2020-10-01", freq=f"{step}D")

    results = []

    for cutoff in cutoffs:
        train = df[df["ds"] <= cutoff]
        test = df[(df["ds"] > cutoff) & (df["ds"] <= cutoff + pd.Timedelta(days=horizon))]

        if len(test) < horizon:
            continue

        # --- Prophet forecast ---
        m = Prophet(yearly_seasonality=False, weekly_seasonality=False)
        m.add_seasonality(name="yearly", period=365.25, fourier_order=10)
        m.add_seasonality(name="weekly", period=7, fourier_order=4)
        m.add_regressor("exo1")
        m.add_regressor("exo2")
        m.fit(train)

        future = test[["ds", "exo1", "exo2"]]
        fc_prophet = m.predict(future)

        # --- SARIMAX forecast ---
        sarimax = sm.tsa.statespace.SARIMAX(
            train["y"],
            order=(2, 1, 2),
            seasonal_order=(1, 1, 1, 7),
            exog=train[["exo1", "exo2"]]
        ).fit()

        fc_sarimax = sarimax.forecast(steps=horizon, exog=test[["exo1", "exo2"]])

        # Metrics
        mae_prophet = mean_absolute_error(test["y"], fc_prophet["yhat"])
        mae_sarimax = mean_absolute_error(test["y"], fc_sarimax)

        mape_prophet = np.mean(np.abs((test["y"] - fc_prophet["yhat"]) / test["y"])) * 100
        mape_sarimax = np.mean(np.abs((test["y"] - fc_sarimax) / test["y"])) * 100

        # Prediction interval coverage
        coverage_prophet = np.mean(
            (test["y"] >= fc_prophet["yhat_lower"]) &
            (test["y"] <= fc_prophet["yhat_upper"])
        )

        results.append([
            cutoff, mae_prophet, mae_sarimax, mape_prophet, mape_sarimax, coverage_prophet
        ])

    metrics_df = pd.DataFrame(
        results,
        columns=["cutoff", "MAE_Prophet", "MAE_SARIMAX",
                 "MAPE_Prophet", "MAPE_SARIMAX",
                 "Prophet_PI_Coverage"]
    )

    return metrics_df


metrics = rolling_backtest(df, prophet_model, sarimax_model)


#Final Results Summary Output

print("\n================ Final Forecast Comparison ================\n")
print(metrics.mean())

print("\nProphet Avg MAE:", metrics["MAE_Prophet"].mean())
print("SARIMAX Avg MAE:", metrics["MAE_SARIMAX"].mean())

print("\nProphet Avg MAPE:", metrics["MAPE_Prophet"].mean())
print("SARIMAX Avg MAPE:", metrics["MAPE_SARIMAX"].mean())

print("\nProphet Prediction Interval Coverage:",
      metrics["Prophet_PI_Coverage"].mean())
